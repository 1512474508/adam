<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>edu.berkeley.cs.amplab.adam</groupId>
    <artifactId>adam-parent</artifactId>
    <version>0.4.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>ADAM: Genomic Data System</name>
 
    <modules>
      <module>adam-format</module>
      <module>adam-convert</module>
    </modules>

    <licenses>
        <license>
            <name>Apache License</name>
            <url>https://raw.github.com/massie/adam/master/LICENSE.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>
    <scm>
        <connection>scm:git:git@github.com:massie/adam.git</connection>
        <developerConnection>scm:git:git@github.com:massie/adam.git</developerConnection>
        <url>scm:git:git@github.com:massie/adam.git</url>
        <tag>HEAD</tag>
    </scm>
    <developers>
        <developer>
            <id>massie</id>
            <name>Matt Massie</name>
            <email>massie@cs.berkeley.edu</email>
            <url>http://www.cs.berkeley.edu/~massie</url>
            <organization>U.C. Berkeley Computer Science</organization>
            <organizationUrl>http://www.cs.berkeley.edu/</organizationUrl>
        </developer>
    </developers>
    <issueManagement>
        <system>github</system>
        <url>https://github.com/massie/adam/issues</url>
    </issueManagement>

    <properties>
        <avro.version>1.7.4</avro.version>
        <cdh.version>4.2.1</cdh.version>
        <hadoop.version>2.0.0-mr1-cdh${cdh.version}</hadoop.version>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <repositories>
        <repository>
            <id>cloudera-repo</id>
            <name>Cloudera Repository</name>
            <url>https://repository.cloudera.com/artifactory/cloudera-repos/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>adam-repo</id>
            <url>file://${project.basedir}/repo</url>
        </repository>
        <repository>
            <id>sonatype-nexus-snapshots</id>
            <url>https://oss.sonatype.org/content/repositories/snapshots</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>

    <dependencyManagement>
      <dependencies>
        <dependency>
            <groupId>org.apache.hadoop</groupId>
            <artifactId>hadoop-client</artifactId>
            <version>${hadoop.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.avro</groupId>
            <artifactId>avro</artifactId>
            <version>${avro.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.avro</groupId>
            <artifactId>avro-mapred</artifactId>
            <version>${avro.version}</version>
            <!-- This classifier uses the hadoop-client artifact that support 1.x versions of Hadoop too -->
            <classifier>hadoop2</classifier>
        </dependency>
        <dependency>
            <groupId>com.twitter</groupId>
            <artifactId>parquet-avro</artifactId>
            <version>1.0.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>adam</groupId>
            <artifactId>picard</artifactId>
            <version>1.76</version>
        </dependency>
        <dependency>
            <groupId>adam</groupId>
            <artifactId>samtools</artifactId>
            <version>1.76</version>
        </dependency>
        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
            <version>14.0.1</version>
        </dependency>
        <dependency>
            <groupId>args4j</groupId>
            <artifactId>args4j</artifactId>
            <version>2.0.23</version>
        </dependency>
      </dependencies>
    </dependencyManagement>
</project>
